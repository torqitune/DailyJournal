<%- include('header'); -%>
    <div class="box" id="heading">
        <!-- "< % = x % >" this is used to pass the value to html page. -->
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <!-- <li> <%= listItem %> </li> -->

        <% listItem.forEach(i=> { %>
            <form action="/delete" method="post">

                <div class="item">
                    <input name="checkbox" value="<%= i._id %>" onchange="this.form.submit()" type="checkbox">
                    <p>
                        <%= i.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>

        <% }); %>


                <form class="item" action="/" method="post">
                    <input type="text" name="listItem" placeholder="Add Item" autocomplete="off">
                    <button type="submit" name="list" value=<%=listTitle %> >+</button>
                </form>
    </div>

    <%- include('footer'); -%>